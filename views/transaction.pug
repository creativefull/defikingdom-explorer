extends layout
block content
	main#content
		.container
			.d-md-flex.justify-content-between.align-items-center.py-3
				.mb-1.mb-md-0
					h1.h4.mb-0 Transactions
			.row
				.col-md-12.col-xs-12.col-sm-12
					.card
						.card-body(style="padding: 5px")
							.table-responsive
								table.table.table-hover.display#tableTxn(width="100%" cellspacing="0")
									thead.thead-light
										tr
											th Txn Hash
											th Method
											th Block
											th Age
											th From
											th To
											th Value
											th Txn Fee
									tbody

block script
	script.
		var tableTxn;
		$(function (){
			$('.nameMethod').tooltip()

			tableTxn = $('#tableTxn').DataTable({
				serverSide: true,
				"pageLength":  50,
				searching : false,
				"autoWidth" : true,
				fixedColumns: true,
				ajax : '/trx/dataTable',
				responsive: true,
				lengthChange: false,
				columns : [
					{
						"data" : "hash",
					},{
						"data" : "method",
					},{
						"data" : "blockNumber",
					},{
						"data" : "age",
					},{
						"data" : "from",
					},{
						"data" : "to",
					},{
						"data" : "value",
					},{
						"data" : "txn_fee",
					}
				],
				columnDefs : [
					{ width: "10%", targets: 0 },
					{ width: "8%", targets: 1 },
					{ width: "5%", targets: 2 },
					{ width: "5%", targets: 3 },
					{ width: "10%", targets: 4 },
					{ width: "10%", targets: 5 },
					{ width: "3%", targets: 6 },
					{ width: "5%", targets: 7 },
				],
			});
		});