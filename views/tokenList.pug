extends layout
block content
	main#content
		.container
			.d-md-flex.justify-content-between.align-items-center.py-3
				.mb-1.mb-md-0
					h1.h4.mb-0 List Token Defi Kingdoms
			.row
				.col-md-12.col-xs-12.col-sm-12
					.card
						.card-body(style="padding: 5px")
							.table-responsive
								table.table.table-hover.display#tableTokens(width="100%" cellspacing="0")
									thead.thead-light
										tr
											th #
											th Name
											th Address
											th Balance
											th Price USD
									tbody


block script
	script.
		var tableTokens;
		$(function (){
			tableTokens = $('#tableTokens').DataTable({
				serverSide: false,
				"pageLength":  50,
				searching : false,
				"autoWidth" : true,
				fixedColumns: true,
				ajax : `/token/list/dataTable`,
				responsive: true,
				lengthChange: false,
				columns : [
					{
						"data" : "avatar",
					},{
						"data" : "name",
					},{
						"data" : "addressToken",
					},{
						"data" : "jewelPrice",
					},{
						"data" : "usdPrice",
					}
				],
			});
		});