extends layout
block content
	main#content
		.container
			.d-md-flex.justify-content-between.align-items-center.py-3
				.mb-1.mb-md-0
					h1.h4.mb-0 Heroes
			.row
				.col-md-12.col-xs-12.col-sm-12
					.card
						.card-body(style="padding: 5px")
							.table-responsive
								table.table.table-hover.display#tableHeroes(width="100%" cellspacing="0")
									thead.thead-light
										tr
											th ID
											th Owner
											th Profession
											th Quest
											th Rarity
											th Level
											th Stamina Full At
									tbody

block script
	script.
		var tableHeroes;

		$(function (){
			tableHeroes = $('#tableHeroes').DataTable({
				serverSide: false,
				"pageLength":  50,
				searching : false,
				"autoWidth" : true,
				fixedColumns: true,
				ajax : `/hero/list/dataTable`,
				responsive: true,
				lengthChange: false,
				columns : [
					{
						"data" : "id",
					},{
						"data" : "owner",
					},{
						"data" : "profession",
					},{
						"data" : "currentQuest",
					},{
						"data" : "rarity",
					},{
						"data" : "level"
					},{
						"data" : "staminaFullAt"
					}
				],
			});
		});